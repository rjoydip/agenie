{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/hooks/*": ["./hooks/*"],
      "@/tools/*": ["./tools/*"],
      "@/models/*": ["./models/*"],
      "@/phases/*": ["./phases/*"]
    }
  },
  "include": [
    "./src/**/*",
    "./models/**/*",
    "./tools/**/*",
    "./hooks/**/*",
    "./phases/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
